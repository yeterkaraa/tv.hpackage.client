@model LoginViewModel


<!DOCTYPE html>

<html>

<head>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            background: #4a97be !important;
            background-size: cover;
        }

        .login-box {
            width: 230px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
            color: white;
        }

            .login-box h1 {
                float: left;
                font-size: 50px;
                border-bottom: 6px solid;
                margin-bottom: 50px;
                padding: 13px 0;
            }
    </style>

   

    <meta name="viewport" content="width=device-width" />



   

    <title>Index</title>

</head>

<body id="arka">

    <form id="duz" method="post">
        <div class="mt-5"></div>
        <h1 class="text-center mt-5 text-white">Login</h1>
        <div class="login-box">
            <div class=" textbox mt-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-people-fill" viewBox="0 0 16 16">
                    <path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                    <path fill-rule="evenodd" d="M5.216 14A2.238 2.238 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.325 6.325 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1h4.216z" />
                    <path d="M4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5z" />
                </svg>
                <input type="text" class="form-control" placeholder="Agency Name" asp-for="AgencyName">
            </div>
            <div class=" textbox mt-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                    <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                </svg>
                <input type="text" class="form-control" placeholder="User Name" asp-for="UserName">
            </div>
            <div class=" textbox mt-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-lock-fill" viewBox="0 0 16 16">
                    <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z" />
                </svg>
                <input type="password" class="form-control" placeholder="Password" asp-for="Password">
            </div>

            @*<a class="btn btn-light mt-2" asp-action="Login" asp-controller="Account">Login</a>*@

            <button type="submit" class="btn btn-light mt-2">
                Login
            </button>

        </div>

    </form>


</body>

</html>